<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_gradient_backgroud">

    <TextView
        android:id="@+id/tv_tutorial_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/sweet_pea"
        android:includeFontPadding="false"
        android:text="@string/app_name"
        android:textColor="@color/stori_yellow"
        android:textSize="70sp" />

    <ImageView
        android:id="@+id/sign_up_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/img_sign_up" />

    <TextView
        android:id="@+id/sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tutorial_title"
        android:layout_marginStart="28dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/cera_pro_light"
        android:text="@string/sign_up"
        android:textColor="@android:color/white"
        android:textSize="25sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/sign_up"
        android:layout_alignStart="@id/sign_up"
        android:layout_alignEnd="@id/sign_up"
        android:background="@color/stori_yellow" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/et_username_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_up"
        android:layout_marginStart="28dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/sign_up_image"
        android:hint="@string/name"
        android:textColorHint="@color/white_45_opacity">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/cera_pro_light"
            android:inputType="textEmailAddress"
            android:paddingTop="6dp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@color/white_45_opacity"
            android:textSize="18sp" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/et_email_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_username_layer"
        android:layout_marginStart="28dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/sign_up_image"
        android:hint="@string/email"
        android:textColorHint="@color/white_45_opacity">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/cera_pro_light"
            android:inputType="textEmailAddress"
            android:paddingTop="6dp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@color/white_45_opacity"
            android:textSize="18sp" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/et_password_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_email_layer"
        android:layout_marginStart="28dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/sign_up_image"
        android:hint="@string/password"
        android:textColorHint="@color/white_45_opacity">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/cera_pro_light"
            android:paddingTop="6dp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@color/white_45_opacity"
            android:textSize="18sp" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/et_repeat_password_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_password_layer"
        android:layout_marginStart="28dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/sign_up_image"
        android:hint="@string/repeat_password"
        android:textColorHint="@color/white_45_opacity">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_repeat_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/cera_pro_light"
            android:paddingTop="6dp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@color/white_45_opacity"
            android:textSize="18sp" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/next_btn"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_below="@id/et_repeat_password_layer"
        android:layout_marginStart="28dp"
        android:layout_marginTop="46dp"
        android:background="@drawable/ic_black_arrow_white_circle" />

    <LinearLayout
        android:id="@+id/log_in_plus_terms_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="18dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_log_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cera_pro_light"
            android:padding="10dp"
            android:text="@string/log_in"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cera_pro_light"
            android:text="   -   "
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_terms_conditions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cera_pro_light"
            android:padding="10dp"
            android:text="@string/terms_and_conditions"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

    </LinearLayout>

</RelativeLayout>