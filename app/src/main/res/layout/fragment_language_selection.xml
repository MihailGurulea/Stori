<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_gradient_backgroud">

    <ImageView
        android:id="@+id/back_btn"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_custom_white_arrow_left" />

    <TextView
        android:id="@+id/tv_language_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30.5dp"
        android:background="@drawable/tv_bottom_border"
        android:fontFamily="@font/cera_pro_light"
        android:paddingBottom="9dp"
        android:text="@string/you_speak"
        android:textColor="@android:color/white"
        android:textSize="25sp" />

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_language_title"
        android:layout_marginStart="40dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="40dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:divider="@android:color/transparent"
        android:dividerHeight="20dp"
        android:layout_above="@id/btn_ready_start"/>

    <Button
        android:id="@+id/btn_ready_start"
        android:layout_margin="20dp"
        android:text="@string/start_learning"
        android:fontFamily="@font/cera_pro_bold"
        android:textSize="16sp"
        android:visibility="gone"
        android:textAllCaps="false"
        android:textColor="@color/btn_text_blue"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_register"
        android:layout_width="match_parent"
        android:layout_height="60dp" />


</RelativeLayout>