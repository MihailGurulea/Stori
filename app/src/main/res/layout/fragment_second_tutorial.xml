<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_gradient_backgroud"
    tools:context=".activities.TutorialActivity">


    <ImageView
        android:id="@+id/img"
        android:layout_marginTop="143dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_tutorial_description"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:src="@drawable/second_tutorial_image"
        />

    <TextView
        android:id="@+id/tv_tutorial_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_above="@id/iv_dots"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/cera_pro_regular"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:text="@string/second_tutorial_text" />

    <ImageView
        android:id="@+id/iv_dots"
        android:layout_width="44dp"
        android:layout_height="8dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="120dp"
        android:gravity="center"
        android:src="@drawable/ic_second_tutorial_page_dot"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>