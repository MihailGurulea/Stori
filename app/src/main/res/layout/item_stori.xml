<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_main">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="171dp"
        android:layout_height="239dp"
        android:background="@drawable/item_stori_background"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@android:color/transparent">

            <ImageView
                android:id="@+id/iv_main_image"
                android:layout_width="171dp"
                android:layout_height="239dp"
                tools:src="@drawable/suggested_stori_image"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/iv_premium"
                android:layout_width="38dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_premium_crown"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="16dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="6dp"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                tools:text="The Wedding"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_read_filter"
            android:background="#7AFFFFFF"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:textSize="25sp"
            android:textColor="@android:color/background_dark"
            android:text="@string/read"
            android:textAlignment="center"
            android:visibility="gone"/>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_title_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_view"
        android:layout_marginTop="13dp"
        android:textColor="@android:color/black"
        android:textSize="13sp"
        tools:text="The Wedding, Romance"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>