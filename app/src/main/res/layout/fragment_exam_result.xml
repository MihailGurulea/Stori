<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_oval_shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_oval_default" />

    <TextView
        android:id="@+id/tv_result_motivation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="52dp"
        android:fontFamily="@font/cera_pro_bold"
        android:text="@string/you_can_do_much_better"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="46sp" />

    <TextView
        android:id="@+id/tv_exam_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/cera_pro_bold"
        android:textColor="@color/colorWhite"
        android:textSize="32sp"
        tools:text="1/10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <Button
            android:id="@+id/btn_once_again"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:background="@drawable/btn_read_orange"
            android:fontFamily="@font/cera_pro_bold"
            android:text="@string/once_again"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btn_finish"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/btn_listen_grey"
            android:fontFamily="@font/cera_pro_bold"
            android:text="@string/finish"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:layout_marginBottom="20dp" />
    </LinearLayout>

</RelativeLayout>