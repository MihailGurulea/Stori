<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_gradient_backgroud"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_tutorial_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="28dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/sweet_pea"
                android:includeFontPadding="false"
                android:text="@string/app_name"
                android:textColor="@color/stori_yellow"
                android:textSize="70sp" />

            <ImageView
                android:id="@+id/sign_up_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/img_sign_up" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_tutorial_title"
                android:layout_marginStart="28dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@id/sign_up_image"
                android:fontFamily="@font/cera_pro_light"
                android:text="@string/the_app_for_enriching_your_vocabulary"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/et_email_layer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginStart="28dp"
                android:layout_marginTop="46dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@id/sign_up_image"
                android:textColorHint="@color/white_45_opacity">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:paddingTop="10dp"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/white_45_opacity"
                    android:textSize="18sp" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/et_password_layer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_email_layer"
                android:layout_marginStart="28dp"
                android:layout_marginTop="31dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@id/sign_up_image"
                android:textColorHint="@color/white_45_opacity">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:paddingTop="10dp"
                    android:maxLines="1"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/white_45_opacity"
                    android:textSize="18sp" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/next_btn"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_below="@id/et_password_layer"
                android:layout_marginStart="28dp"
                android:layout_marginTop="37dp"
                android:background="@drawable/ic_black_arrow_white_circle" />

            <TextView
                android:id="@+id/tv_connect_with"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/next_btn"
                android:layout_marginStart="28dp"
                android:layout_marginTop="21dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/cera_pro_light"
                android:text="@string/or_connect_with"
                android:textColor="#40FFFFFF"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/ll_fb_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_connect_with"
                android:layout_marginStart="29dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/fb_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_fb" />

                <Button
                    android:id="@+id/google_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="29dp"
                    android:background="@drawable/ic_google" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_fb_google"
                android:layout_marginStart="18dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sign_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cera_pro_light"
                    android:padding="10dp"
                    android:text="@string/sign_up"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cera_pro_light"
                    android:text="   -   "
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_forgot_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cera_pro_light"
                    android:padding="10dp"
                    android:text="@string/forgot_password"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>