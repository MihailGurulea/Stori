<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_F9F9F9"
    tools:context=".activities.StartStoriActivity">

    <ImageView
        android:id="@+id/cover_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/stori_cover_sample" />

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="22dp"
        android:src="@drawable/ic_stori_back_btn" />

    <Button
        android:id="@+id/btn_add_favorite"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/ic_stori_like_btn" />

    <RelativeLayout
        android:id="@+id/activity_container"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>